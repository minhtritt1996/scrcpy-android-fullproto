<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <com.example.scrcpyandroidfullproto.view.AspectRatioSurfaceView
        android:id="@+id/videoSurface"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/screen_scrim"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/statusPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@color/status_panel_bg"
        app:cardCornerRadius="22dp"
        app:cardElevation="10dp"
        app:strokeColor="@color/sheet_stroke"
        app:strokeWidth="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="14dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ui_title"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/ui_subtitle"
                    android:textColor="@color/text_muted"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/status_overlay"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp"
                    android:text="@string/status_ready"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_nav"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp"
                android:text="@string/mode_badge"
                android:textColor="@color/text_primary"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/exitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/button_exit"
        android:src="@drawable/ic_close"
        android:translationZ="16dp"
        app:backgroundTint="@color/fab_tint"
        app:fabSize="mini"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statusPanel"
        app:useCompatPadding="true" />

    <FrameLayout
        android:id="@+id/controlOverlay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/control_sheet_bg"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/navPill"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/controls_title"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/controls_subtitle"
                android:textColor="@color/text_muted"
                android:textSize="12sp" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/controlTabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/edit_field_bg"
                android:padding="4dp"
                app:tabIndicatorColor="@color/accent_blue"
                app:tabIndicatorFullWidth="false"
                app:tabInlineLabel="true"
                app:tabRippleColor="@android:color/transparent"
                app:tabSelectedTextColor="@color/text_primary"
                app:tabTextColor="@color/text_muted">

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/tabConnection"
                    android:text="@string/tab_connection" />

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/tabStream"
                    android:text="@string/tab_stream" />
            </com.google.android.material.tabs.TabLayout>

            <FrameLayout
                android:id="@+id/controlTabContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/connectionPanel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/deviceIpInput"
                        style="?attr/editTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/edit_field_bg"
                        android:hint="@string/hint_device_ip"
                        android:inputType="textUri"
                        android:paddingHorizontal="12dp"
                        android:text="192.168.1.253"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_muted" />

                    <EditText
                        android:id="@+id/devicePortInput"
                        style="?attr/editTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_field_bg"
                        android:hint="@string/hint_device_port"
                        android:inputType="number"
                        android:paddingHorizontal="12dp"
                        android:text="7777"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_muted" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <EditText
                            android:id="@+id/pairPortInput"
                            style="?attr/editTextStyle"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="6dp"
                            android:background="@drawable/edit_field_bg"
                            android:hint="@string/hint_pair_port"
                            android:inputType="number"
                            android:paddingHorizontal="12dp"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_muted" />

                        <EditText
                            android:id="@+id/pairCodeInput"
                            style="?attr/editTextStyle"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginStart="6dp"
                            android:background="@drawable/edit_field_bg"
                            android:hint="@string/hint_pair_code"
                            android:inputType="text"
                            android:paddingHorizontal="12dp"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_muted" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/localForwardPortInput"
                        style="?attr/editTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_field_bg"
                        android:hint="@string/hint_local_forward_port"
                        android:inputType="number"
                        android:paddingHorizontal="12dp"
                        android:text="7008"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_muted" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/connectButton"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="6dp"
                            android:background="@drawable/button_accent"
                            android:text="@string/button_connect"
                            android:textAllCaps="false"
                            android:textColor="#09111E"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/disconnectButton"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:layout_marginStart="6dp"
                            android:background="@drawable/button_secondary"
                            android:text="@string/button_disconnect"
                            android:textAllCaps="false"
                            android:textColor="@color/text_primary"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/streamPanel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stream_title"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/stream_subtitle"
                        android:textColor="@color/text_muted"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <Button
                            android:id="@+id/resolutionButton"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/button_secondary"
                            android:text="@string/button_resolution"
                            android:textAllCaps="false"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/fpsButton"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="4dp"
                            android:background="@drawable/button_secondary"
                            android:text="@string/button_fps"
                            android:textAllCaps="false"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/stretchToggleButton"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:background="@drawable/button_secondary"
                            android:text="@string/button_stretch"
                            android:textAllCaps="false"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/disconnectStreamButton"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_secondary"
                        android:text="@string/button_disconnect"
                        android:textAllCaps="false"
                        android:textColor="@color/text_primary"
                        android:textSize="13sp" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/navPill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/pill_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="14dp"
        android:paddingVertical="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/navBackButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/button_nav"
            android:contentDescription="@string/nav_back"
            android:padding="9dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_arrow_back"
            android:tint="@color/text_primary" />

        <ImageButton
            android:id="@+id/navHomeButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/button_nav"
            android:contentDescription="@string/nav_home"
            android:padding="9dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_home"
            android:tint="@color/text_primary" />

        <ImageButton
            android:id="@+id/navRecentsButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/button_nav"
            android:contentDescription="@string/nav_recent"
            android:padding="9dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_recents"
            android:tint="@color/text_primary" />

        <ImageButton
            android:id="@+id/toggleControlsButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/button_nav"
            android:contentDescription="@string/controls_toggle_desc"
            android:padding="9dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_more_vert"
            android:tint="@color/text_primary" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
